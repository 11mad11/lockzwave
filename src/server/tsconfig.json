{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "noImplicitAny": true,
    //"moduleResolution": "node",
    "sourceMap": true,
    "outDir": "../../dist/server",
    "baseUrl": ".",
    "lib": ["ES2015"],
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "composite": true
  },
  "references": [
    { "path": "../shared" }
  ],
  "include": [
    "**/*"
  ],
  "exclude": ["../../node_modules", "**/*.d.ts"]
}
